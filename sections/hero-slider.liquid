<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    {% for slide in section.blocks %}
      <div class="carousel-item active position-relative">
        <img loading=" lazy" class="d-lg-block d-none w-100" src="{{ slide.settings.image | img_url: 'master' }}"
             alt="First slide"/>
        <img loading="lazy" class="d-block d-lg-none w-100" src="{{ slide.settings.mobile | img_url: 'master' }}"/>
        <a href="{{ section.settings.link }}" id="hero__banner-shop-now" class="d-none d-md-block btn btn-primary
          btn-lg px-3
          text-uppercase
          top-0 start-0">Shop Now!</a>
        <div class="d-block d-xl-none container fw-bold text-center h5">{{ slide.settings.mobile-banner }}</div>
        <a href="{{ section.settings.link }}" id="hero__banner-mobile-shop-now" class="d-block d-md-none btn
          btn-primary btn-lg px-3
          text-uppercase
          top-0 start-0
          mb-3">Shop Now!</a>
      </div>
    {% endfor %}
  </div>
  <!-- href="#carouselExampleControls" -->
  <a class="carousel-control-prev" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

{% schema %}
{
"name": "Hero Slider",
"settings":[
{
"id":"link",
"type":"url",
"label":"Shop Now Link"
}],
"blocks": [
{
"name": "Slide",
"type": "slide",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "image_picker",
"id": "mobile",
"label": "Mobile Image"
},
{
"type": "richtext",
"id": "mobile-banner",
"label": "Mobile Banner"
}
]
}]
}
{% endschema %}

