<div class="container-fluid">
    <h3 class="text-center text-uppercase font-weight-bold mt-5">{{ section.settings.heading }}</h3>
    <h5 class="text-center text-uppercase">{{ section.settings.subHeading }}</h5>
    {% for block in section.blocks %}
        <div class="large-video-text__container d-flex my-md-5 my-sm-2 container-fluid justify-content-center {% if block
        .settings.flip %} flex-column flex-lg-row {% else %} flex-lg-row-reverse flex-column {% endif %}">
            <div class="col col-xl-5 align-self-center">{{ block.settings.text }}</div>
            <div class="col col-xl-6 p-0" style="max-width: 500px;">{{ block.settings.embed }}</div>
        </div>
    {% endfor %}
</div>

{% schema %}
{
"name": "About Us Info",
"settings": [
{
"label":"Heading",
"type":"text",
"id":"heading"
},
{
"label":"Sub Heading",
"type":"text",
"id":"subHeading"
}

],
"blocks": [
{
"name": "Slide",
"type": "slide",
"settings": [
{
"type": "checkbox",
"id": "flip",
"label": "Flip text and video",
"default": false
},
{
"type": "html",
"id": "text",
"label": "Text"
},
{
"type": "html",
"id": "embed",
"label": "Video embed"
}
]
}
]
}
{% endschema %}
