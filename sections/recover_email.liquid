<div class="m-4">
{% form 'recover_customer_password' %}
  {{ form_errors | default_errors }}

    <h2>Password Recovery</h2>
     <div class="email mb-3">
        <label hidden for="email">Email</label>
        <input type="email" class="form-control" placeholder="Enter your e-mail" name="email">
        <small style="color: red;">Be sure and check your spam folder for the reset email.</small>
    </div>

    <input type="hidden" name="return_to" value="/account/login#recover?es=1">

    <div class="submit">
        <input type="submit" class="btn btn-primary btn-lg text-uppercase w-50 sm:w-100" value="Submit">
    </div>

    <div class="mt-3">
        <a href="#" class="loginBtn btn btn-outline-primary btn-lg text-uppercase w-50 sm:w-100 shadow">Login Account</a>
    </div>
</div>
{% endform %}