<div id="cart__coupon-container" class="text-right mt-3 mt-sm-1">
    <div style="display: none;" id="calculator-loading">
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
    <div class="content" id="calculator--content">
        <div id="calculator--content-savings" style="display: none;">
            <div class="text-left mb-1">
                <span class="saving-label h5">Savings Calculator</span>
            </div>
            <div class="cart__savings">
                <div id="cart__auto-savings"></div>
                <!-- <div id="cart__shipping-fee"></div> -->
                <div id="cart__shipping-savings"></div>
                <div id="cart__subscription-savings"></div>
                <div id="cart-coupon_coupon-savings"></div>
                <div id="cart-coupon_total-savings" class="border-top border-dark pt-2"></div>
            </div>
        </div>
        <div class="d-flex mt-2">
            <input type="text" class="form-control" id="cart__coupon-code" placeholder="Coupon Codes Here - Gift Cards Next Page" />
            <button type="button" class="btn btn-primary" id="cart__apply-coupon">Apply</button>
        </div>
        <div class="text-left mt-1">
            <label class="text-primary">Gift Cards Are Applied At Checkout - Next page</label>
        </div>
        <div id="cart__coupon-alert" style="display: none;"></div>
        <div id="cart__coupon-error" class="d-none mt-1 alert alert-danger text-center">Sorry, that coupon code does not exist</div>
        <div id="cart__coupon-error-invalid" class="d-none mt-1 alert alert-danger text-center">Sorry, that coupon code is invalid</div>
    </div>
</div>
<div id="cart__coupon-success" class="d-none mt-1 alert alert-success">Congratulations! You saved xx%!</div>