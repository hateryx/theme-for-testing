<div class="container-fluid my-5">
  <h1 class="text-center mt-5">Get in touch with us:</h1>
  <div class="d-flex flex-column-reverse flex-lg-row align-items-center justify-content-center">
    <div class="testimonial {{ section.id }} col-12 col-lg-4 text-center">
      <div class="testimonial_image">
        <img loading="lazy" class="img-fluid" src="{{ section.settings.testimonial-image | img_url: '400x' }}"> 
      </div>
      <div class="testimonial_rating">
        {% for star in (1..section.settings.rating) %}
          <span class="{{ star }}"><i class="fas fa-star"></i></span>
        {% endfor %}
      </div>
      <div class="testimonial_text">
        {{ section.settings.testimonial-text  }}
      </div>
    </div>

    <div class="information-line2 col-12 col-lg-4">
      <div class="customer-service">
        <h2>Customer Service</h2>
        <p><a href="mailto:info@sportformula.com" class="text-break text--secondary-hover">Info@SportFormula.com</a></p>
        <p><a href="tel:800-964-8482" class="text--secondary-hover">800.964.8482</a></p> 

      </div>
      <div class="wholesale">
        <h2>Wholesale</h2>
        <p><a href="mailto:wholesale@sportformula.com" class="text-break text--secondary-hover">Wholesale@SportFormula.com</a></p>
        <p><a href="tel:800-964-8482" class="text--secondary-hover">800.964.8482</a></p> 

      </div>
      <div class="information-line2__address">
        <h2>Address:</h2>
        <p>Attn: Sport Formula<br>
        8780 19th Street Suite #217<br>
        Alta Loma, CA 91701</p>
      </div>
    </div>
  </div>
</div>

<style>
  .information-line2{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 100%;
    text-align: center;
  }

  .information-line2 h2{
    color: #FD9639;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .information-line2 p {
    font-size: 25px;
    margin-bottom: 10px;
  }

  .text--secondary-hover {
    color: #000;
  }

  .text--secondary-hover:hover {
    color: #FD9639;
  }
</style>

{% schema %}
{
  "name": "Testimonial",
  "settings": [{
      "id": "testimonial-image",
      "type": "image_picker",
      "label": "Testimonial Image"
    },
    {
      "id": "testimonial-text",
      "type": "richtext",
      "label": "Testimonial Text"
    },
    {
      "id": "rating",
      "type": "range",
      "label": "Rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 5
    }
  ]
}
{% endschema %}
