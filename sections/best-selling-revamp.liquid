                },
                {
                    "type": "url",
                    "id": "url",
                    "label": "Button URL"
                }
            ]
        }
    ],
    "presets": [
      {
        "category": "Content",
        "name": "Best Selling Revamp"
      }
    ]
}
{% endschema %}