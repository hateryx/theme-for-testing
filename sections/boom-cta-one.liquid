{% liquid
    assign title = section.settings.title
    assign link = section.settings.link
    assign cta_text = section.settings.cta_text
%}

<div class="container py-5">
    <div class="row">
        <div class="col-12 col-md-10 mx-auto text-center">
            <h2>{{ title }}</h2>
            <a href="{{ link }}" class="btn btn-primary text-uppercase mt-4">{{ cta_text }}</a>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Boom CTA One",
    "class": "boom--cta-one",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "CTA Title",
            "default": "At BOOM!, we say “less is more as women age.” Our line is a super multitasker that can replace everything in your makeup bag — with just three sticks."
        },
        {
            "type": "url",
            "id": "link",
            "label": "CTA Link"
        },
        {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text",
            "default": "Check Out Our Products"
        }
    ]
}
{% endschema %}