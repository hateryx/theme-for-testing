{
    "name": "Contact Us Revamp",
    "class": "contact--revamp",
    "settings": [
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
        },
        {
            "type": "text",
            "id": "tagline",
            "label": "Tagline",
            "default": "Contact Us"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Get In Touch With Us"
        }
    ],
    "blocks": [
        {
            "name": "Information",
            "type": "information",
            "settings": [
                {
                    "type": "text",
                    "id": "icon",
                    "label": "Icon"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "info_one",
                    "label": "Info One"
                },
                {
                    "type": "text",
                    "id": "info_two",
                    "label": "Info Two"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Content",
            "name": "Contact Us Revamp"
        }
    ]
}
{% endschema %}