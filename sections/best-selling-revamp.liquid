    border: 2px solid #F17A15;
    content: '';
  }
</style>

{% schema %}
{
    "name": "Best Selling Revamp",
    "class": "best--selling-revamp",
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "Product collection"
        },
        {
            "type": "url",
            "id": "url",
            "label": "All Products Page"
        }
    ],
    "blocks": [
        {
            "name": "Product",
            "type": "product",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
